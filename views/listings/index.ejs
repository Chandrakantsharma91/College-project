                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <br><br>
                  <p class="card-text"> <b><%= listing.title %> </b><br><hr>
                    <!-- &#8377;  <%= listing.price.toLocaleString("en-IN")%> <br> -->
                    <%= listing.description %>
                </p>
                </div>
              </div>
            </a>
              <%  } %> 
    
</body>



